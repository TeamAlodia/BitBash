<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_load_bash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alodia.bitbash.ui.activities.LoadBashActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_HeaderInvites"
        android:text="Incoming transmission!"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerView_Invites"
        android:layout_below="@+id/textView_HeaderInvites"
        android:visibility="gone">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select"
        android:id="@+id/textView_HeaderOne"
        android:textAlignment="center"
        android:layout_below="@+id/recyclerView_Invites"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_HeaderOne"
        android:text="a file"
        android:id="@+id/textView_HeaderTwo"
        android:textAlignment="center"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView_HeaderTwo"
        android:id="@+id/recyclerView_Bashes">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
